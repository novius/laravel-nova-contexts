{
    "name": "novius/laravel-nova-contexts",
    "description": "A Laravel Nova tool to manage resources's contexts.",
    "keywords": [
        "laravel",
        "nova",
        "contexts"
    ],
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=8.0",
        "laravel/nova": "^4.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "Novius\\LaravelNovaContexts\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Novius\\LaravelNovaContexts\\LaravelNovaContextsServiceProvider"
            ]
        }
    },
    "scripts": {
        "fmt": [
            "php-cs-fixer fix --config .php-cs-fixer.php -vv --diff --allow-risky=yes"
        ],
        "lint": [
            "@composer fmt -- --dry-run"
        ]
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
