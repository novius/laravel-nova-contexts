{
    "name": "novius/laravel-nova-contexts",
    "description": "A Laravel Nova tool to manage resources's contexts.",
    "keywords": [
        "laravel",
        "nova",
        "contexts"
    ],
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=7.4.0",
        "illuminate/support": "^7.0|^8.0|^9.0"
    },
    "require-dev": {
      "friendsofphp/php-cs-fixer": "~2.15.0"
    },
    "autoload": {
        "psr-4": {
            "Novius\\LaravelNovaContexts\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Novius\\LaravelNovaContexts\\LaravelNovaContextsServiceProvider"
            ]
        }
    },
    "scripts": {
      "lint": [
        "php-cs-fixer fix --config .php_cs -vv --diff --allow-risky=yes --dry-run"
      ]
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
